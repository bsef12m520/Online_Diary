        <form class="rcorners"  action="/Home/LoginVerification" method="post">
            
            <input type="email" placeholder="Email"  name="Email" required style="height:30px ; width:300px ;font-size:small ; border-radius: 25px; border: 2px solid #D3D3D3; padding: 20px;" />
            <br />
            <br />
            <input type="password" placeholder="Password" name="Password" required style="height:30px ; width:300px ;font-size:small ; border-radius: 25px; border: 2px solid #D3D3D3; padding: 20px;" />
            <br />
            <br />
            <button type="submit" class="btn btn-primary" style="height:40px ; width:300px">Login</button>
                
        </form>
          </div> 
                </div>
              <br />
              <h4>Don't have any account?</h4><a href="/Home/SignUp" style="text-decoration:none;font-size:20px">Register Yourself</a>
              </div>

       
    </body>
</html>

